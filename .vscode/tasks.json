{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/cpp"
      },
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "-j"
      ],
      "options": {
        "cwd": "${workspaceFolder}/cpp"
      },
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "CMake: configure (Debug)"
      ]
    },
    {
      "label": "Run: ./cpp/build/pym4ri",
      "type": "shell",
      "command": "${workspaceFolder}/cpp/build/pym4ri",
      "options": {
        "cwd": "${workspaceFolder}/cpp"
      },
      "dependsOn": [
        "CMake: build"
      ],
      "problemMatcher": []
    }
  ]
}